{
  "permissions": {
    "allow": [
      "spec-init",
      "spec-validate",
      "spec-work",
      "spec-done",
      "spec-feat",
      "Bash(ls:*)"
    ],
    "deny": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'File updated: $CLAUDE_FILE_PATHS' >> .claude/activity.log"
          }
        ]
      }
    ]
  }
}
